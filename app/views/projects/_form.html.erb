
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="mb-3">
    <%= f.label "#{I18n.t 'project.title'}" %>
    <%= f.text_field :title, class: "form-controller" %>
  </div>

  <div class="mb-3">

    <%= f.number_field :position, class: "form-controller", type: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"#{I18n.t 'forms.submit'}", class:"btn btn-success" %>
  </div>
  <br>
<% end %>

