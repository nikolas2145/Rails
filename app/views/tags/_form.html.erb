<%= simple_form_for @tag.task do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error" "#{I18n.t 'forms.cannot_save'}") %> </h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "#{I18n.t 'project.title'}" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="actions"><br>
    <%= f.submit "#{I18n.t 'forms.submit'}", class:"btn btn-success" %>
  </div>
<% end %>
