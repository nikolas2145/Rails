
<% if @projects.nil? == false %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Projekty</th>

    <th colspan="3"></th>
  </tr>
  </thead>




<% @projects.each do |project| %>

    <tr>
      <td><%= project.title %></td>

      <td><%= link_to 'Detail', project, class: "btn btn-secondary" %></td>
      <td><%= link_to 'Editace', edit_project_path(project), class: "btn btn-dark" %></td>
      <td><%= link_to 'Odstranit', project, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
    </tr>
  <% end %>
<%end %> </table>

