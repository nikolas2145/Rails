<%= simple_form_for @task do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> <%="#{I18n.t 'forms.cannot_save'}" %></h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "#{I18n.t 'tasks.title'}" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "#{I18n.t 'forms.desc'}" %><br />
    <%= f.text_area :description %>
  </div>
  <%= f.label "#{I18n.t 'tasks.file'}" %><br />
  <%= f.file_field :attachment %>
<br>

  <div class="field">

    <%= f.text_field :project, type: :hidden %>



<br>
    <%= f.check_box :is_done %>
    <%= f.label "#{I18n.t 'tasks.is_done?'}" %>
  </div>
  <div class="actions">
<br>
    <%= f.submit "#{I18n.t 'forms.submit'}", class:"btn btn-success" %>
  </div>
<% end %>
