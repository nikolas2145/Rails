<h2><%= current_user.email%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Jméno" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Jméno" %>
  </div>

  <div class="field">
    <%= f.label "Příjmení" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Příjmení" %>
    </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Heslo" %> <i>(Nechte prázndé, pokud nechcete upravit)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />

    <% end %>
  </div>

  <div class="field">
    <%= f.label "Potvrzení hesla" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Současné heslo" %> <i>(Potvrzení hesla)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Uložit", class:"btn btn-success" %>
  </div>
<% end %>
<br>

<h3>Zrušení účtu</h3>

<p> <%= button_to "Zrušit účet", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger"%></p>

