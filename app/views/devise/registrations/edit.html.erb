<h2><%= current_user.email%></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="field">
    <%= f.label "#{I18n.t'register.name'}" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete:"#{I18n.t 'register.name'}"%>
  </div>

  <div class="field">
    <%= f.label "#{I18n.t'register.last_name'}" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "#{I18n.t 'register.last_name'}"%>
    </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "#{I18n.t 'passwords.password'}" %> <i>(<%="#{I18n.t'edit.password_empty'}" %>)</i><br />
    <%= f.password_field :password, autocomplete: "#{I18n.t 'passwords.new_password'}" %>
    <% if @minimum_password_length %>
      <br />

    <% end %>
  </div>

  <div class="field">
    <%= f.label "#{I18n.t 'passwords.password_confirm'}" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "#{I18n.t 'passwords.password_confirm'}" %>
  </div>

  <div class="field">
    <%= f.label "#{I18n.t 'passwords.current_password'}" %> <i>(<%="#{I18n.t'passwords.password_confirm'}" %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "#{I18n.t 'passwords.current_password'}"%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "#{I18n.t 'register.save'}", class:"btn btn-success" %>
  </div>
<% end %>
<br>

<h3><%="#{I18n.t 'edit.cancel_account'}" %></h3>

<p> <%= button_to "#{I18n.t 'edit.cancel_account'}", registration_path(resource_name), data: { confirm: "#{I18n.t 'notice.are_you_sure'}" }, method: :delete, class:"btn btn-danger"%></p>

